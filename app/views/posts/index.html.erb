<div class="container mx-auto px-4 py-8 max-w-4xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">自慢話掲示板</h1>

  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="text-gray-700 leading-relaxed mb-3">
          <%= simple_format(post.content, class: "whitespace-pre-wrap") %>
        </div>
       <div class="flex justify-end">
         <span class="text-sm text-gray-500"><%= post.name %></span>
       </div>
      </div>
    <% end %>
  </div>
</div>
