<div class="min-h-screen w-full bg-gradient-to-br from-yellow-50 to-amber-100 flex flex-col items-center justify-center p-4">
  <div class="w-full max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold text-amber-800 mb-8 text-center">
      ✨ 自慢話掲示板 ✨
    </h1>

    <div class="space-y-6">
      <% @posts.each do |post| %>
        <div class="bg-white rounded-lg shadow-lg border-2 border-amber-200 p-8 hover:shadow-xl transition-all duration-300 mx-auto">
          <div class="text-amber-900 leading-relaxed mb-4 font-medium text-lg">
            <%= simple_format(post.content, class: "whitespace-pre-wrap") %>
          </div>
          <div class="flex justify-end">
            <span class="text-base text-amber-600 bg-amber-100 px-4 py-2 rounded-full border border-amber-200 font-semibold">
              <%= post.name %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>