<div class="container mx-auto px-4 py-8 max-w-3xl">
  <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">新規作成</h1>

  <%= form_with model: @post, local: true do |f| %>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="mb-6">
        <%= f.label :content, "投稿内容", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :content,
            rows: 5,
            placeholder: "あなたの自慢話を入力してください",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none" %>
      </div>

      <div class="flex justify-between items-center">
        <%= f.submit "投稿", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
      </div>
    </div>
  <% end %>
</div>
