<header class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-5">
    <div class="flex justify-end items-center py-4">
      <!-- ナビゲーションリンク -->
      <nav>
        <%= link_to "投稿一覧", posts_path, class: "mr-4" %>
        <%= link_to "新規作成", new_post_path %>
      </nav>
    </div>
  </div>
</header>


<header class="bg-gradient-to-r from-amber-400 to-yellow-500 shadow-lg fixed top-0 left-0 right-0 z-50 border-b-4 border-amber-600">
  <div class="container mx-auto px-6">
    <div class="flex justify-between items-center py-4">
      <!-- ロゴ部分 -->
      <div class="flex items-center space-x-2">
        <%= link_to posts_path, class: "flex items-center space-x-2 hover:scale-105 transition-transform duration-200" do %>
          <span class="text-3xl">✨</span>
          <h1 class="text-2xl font-bold text-white drop-shadow-lg">自慢話掲示板</h1>
        <% end %>
      </div>

      <!-- ナビゲーションリンク -->
      <nav class="flex items-center space-x-4">
        <%= link_to posts_path, class: "group relative px-4 py-2 text-white font-semibold hover:text-amber-100 transition-colors duration-200" do %>
          <span class="flex items-center space-x-1">
            <span>📋</span>
            <span>投稿一覧</span>
          </span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-white group-hover:w-full transition-all duration-300"></span>
        <% end %>

        <%= link_to new_post_path, class: "group relative px-4 py-2 text-white font-semibold hover:text-amber-100 transition-colors duration-200" do %>
          <span class="flex items-center space-x-1">
            <span>✍️</span>
            <span>新規作成</span>
          </span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-white group-hover:w-full transition-all duration-300"></span>
        <% end %>
      </nav>
    </div>
  </div>
</header>

<!-- ヘッダーの高さ分だけ余白を追加 -->
<div class="pt-20"></div>